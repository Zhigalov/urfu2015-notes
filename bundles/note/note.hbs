<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="{{ meta.charset }}">
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ meta.description }}">

    {{#if isDev}}
        <link rel="stylesheet" href="/note.css">
    {{else}}
        <link rel="stylesheet" href="//urfu2015-notes.surge.sh/note.css">
    {{/if}}
</head>
<body>
    {{> header/header }}

    <a href="/notes">← К списку заметок</a>

    <section class="note__wrapper">
        <ul class="note__navigation">
            {{#each notes}}
                {{#unless isSelected}}
                    <li><a href="/notes/{{ name }}">{{ name }}</a></li>
                {{else}}
                    {{ name }}
                {{/unless}}
            {{/each}}
        </ul>

        <div class="note">
            <div class="note__name">{{ name }}</div>
            <div class="note__text">{{ text }}</div>
        </div>
    </section>

    {{> footer/footer }}

    {{#if isDev}}
        <script src="/note.js"></script>
    {{else}}
        <script src="//urfu2015-notes.surge.sh/note.js"></script>
    {{/if}}
</body>
</html>
