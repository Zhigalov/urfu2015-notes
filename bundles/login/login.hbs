<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="{{ meta.charset }}">
    <title>{{ page.title }}</title>
    <meta name="description" content="{{ meta.description }}">

    {{#if isDev}}
        <link rel="stylesheet" href="/login.css">
    {{else}}
        <link rel="stylesheet" href="//urfu2015-notes.surge.sh/login.css">
    {{/if}}
</head>
<body>
    {{> header/header }}

    {{#if error}}
        <p class="auth__error">
            {{ error }}
        </p>
    {{/if}}

    <form action="/login" method="post">
        <div>
            <label>Логин:</label>
            <input type="text" name="username"/>
        </div>
        <div>
            <label>Пароль:</label>
            <input type="password" name="password"/>
        </div>
        <div>
            <input type="submit" value="Войти"/>
        </div>
    </form>

    {{> footer/footer }}

    {{#if isDev}}
        <script src="/main.js"></script>
    {{else}}
        <script src="//urfu2015-notes.surge.sh/main.js"></script>
    {{/if}}
</body>
</html>
